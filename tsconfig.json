{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es2017", "es2015", "es6"
    ],
    "module": "commonjs",
    "outDir": "./build",
    "typeRoots": [ "./@types", "./node_modules/@types"],
    "sourceMap": false,
    "strict": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
  },
  "exclude": [
    "node_modules"
  ]
}
